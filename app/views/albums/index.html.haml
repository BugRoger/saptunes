  %span.album-title <%= title %>
  %span.artist-name <%= artist %>

%script#album-playlist-template{type: "text/html"}
  %span.album-title <%= title %>
  %span.artist-name <%= artist %>
  %ol.tracks
    <% _.each(tracks, function(track) { %>
    %li 
      %span.track-name <%= track.name %>
    <% }); %>
    

